# Environment variables for Life Cycle Cell services
# Copy this file to .env and modify as needed

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=sql4
DB_USERNAME=postgres
DB_PASSWORD=password

# Notification Database Configuration
NOTIFICATION_DB_HOST=postgres-notifications
NOTIFICATION_DB_PORT=5432
NOTIFICATION_DB_NAME=sql7
NOTIFICATION_DB_USERNAME=postgres
NOTIFICATION_DB_PASSWORD=password

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Service Ports
APPLICATION_SERVICE_PORT=8080
NOTIFICATION_SERVICE_PORT=8083
PROJECT_SERVICE_PORT=8081
USER_SERVICE_PORT=8082
API_GATEWAY_PORT=8000

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker

# Logging
LOG_LEVEL=INFO

# JVM Options
JAVA_OPTS=-Xmx512m -Xms256m
